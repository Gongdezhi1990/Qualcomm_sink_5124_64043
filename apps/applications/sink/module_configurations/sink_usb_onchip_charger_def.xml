                    <PatternArrayRow Id="USB Connected To Floating Data Line Charger" ShortId="i_fchg" Node="Basic">
                        <PatternArrayConfigItem
                            ShortId="charger_config"
                            DefaultValue="When Connected To Floating Data Line Charger" />
