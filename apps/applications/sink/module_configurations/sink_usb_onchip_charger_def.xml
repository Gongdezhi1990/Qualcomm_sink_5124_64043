                            ShortId="charge"
                            DefaultValue="true" />
                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
                            DefaultValue="false" />
