                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="current"
                            DefaultValue="500" />
                    </PatternArrayRow>

                    <PatternArrayRow Id="USB Connected To BC 1.2 Charging Port" ShortId="i_chg" Node="Basic">
                        <PatternArrayConfigItem
                            ShortId="charger_config"
                            DefaultValue="When Connected To BC 1.2 Charging Port" />
                        <PatternArrayConfigItem
                            ShortId="charge"
                            DefaultValue="true" />
                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="current"
                            DefaultValue="1500" />
                    </PatternArrayRow>

                    <PatternArrayRow Id="USB Connected To BC 1.2 Dedicated Charger" ShortId="i_dchg" Node="Basic">
                        <PatternArrayConfigItem
                            ShortId="charger_config"
                            DefaultValue="When Connected To BC 1.2 Dedicated Charger" />
                        <PatternArrayConfigItem
                            ShortId="charge"
                            DefaultValue="true" />
                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
