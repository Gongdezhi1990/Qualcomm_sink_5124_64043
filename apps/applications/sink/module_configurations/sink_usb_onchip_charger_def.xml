                            ShortId="charger_config"
                            DefaultValue="When Suspended Dead Battery" />
                        <PatternArrayConfigItem
                            ShortId="charge"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
                            DefaultValue="true" />
                        <PatternArrayConfigItem
                            ShortId="current"
                            DefaultValue="0" />
                    </PatternArrayRow>

                    <PatternArrayRow Id="USB Attached Not Enum" ShortId="i_att" Node="Basic">
                        <PatternArrayConfigItem
                            ShortId="charger_config"
                            DefaultValue="When Attached Not Enum" />
                        <PatternArrayConfigItem
                            ShortId="charge"
                            DefaultValue="true" />
                        <PatternArrayConfigItem
                            ShortId="vsel"
                            DefaultValue="CHG" />
                        <PatternArrayConfigItem
                            ShortId="power_off"
                            DefaultValue="false" />
                        <PatternArrayConfigItem
                            ShortId="disable_leds"
